<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/suggestionImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/location_32"
        android:paddingEnd="5dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/suggestionTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/suggestionImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/suggestionSubtitle"
        android:layout_below="@+id/suggestionTitle"
        android:layout_toEndOf="@id/suggestionImg"  />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/suggestionButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/goto_32"
        android:layout_alignBottom="@+id/suggestionSubtitle"
        android:background="@color/transparent" />


</RelativeLayout>